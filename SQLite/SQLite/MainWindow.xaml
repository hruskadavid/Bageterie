<Window x:Class="SQLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLite"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        <TabControl>
            <TabItem Header="Přehled objednávek">
            <Frame x:Name="Listing"></Frame>
        </TabItem>
            <TabItem Header="Nová objednávka" Grid.Column="1">
                <Frame x:Name="New" NavigationUIVisibility="Hidden"></Frame>
            </TabItem>
            <TabItem Header="Alergeny" Grid.Column="1">
                <Frame x:Name="Alergeny" NavigationUIVisibility="Hidden"></Frame>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
